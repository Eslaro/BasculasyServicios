<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <!-- Contenedor principal de los campos de los técnicos y el botón -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Contenedor dinámico donde se agregarán los campos de técnicos -->
        <LinearLayout
            android:id="@+id/membersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Aquí van los campos de los técnicos, generados dinámicamente -->
        </LinearLayout>

        <!-- Botón para guardar los miembros -->
        <Button
            android:id="@+id/btnSaveMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Integrantes"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</ScrollView>
