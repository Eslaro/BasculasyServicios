<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:text="Registrar Requerimientos de Mantenimiento"
        style="@style/TextAppearance.Figma.Header"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Spinner para seleccionar los servicios de mantenimiento -->
    <Spinner
        android:id="@+id/spinnerServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <!-- Campo de texto para ingresar los requerimientos -->
    <EditText
        android:id="@+id/etRequirements"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Ingrese los requerimientos del mantenimiento"
        style="@style/FigmaInputStyle"
        android:layout_marginBottom="16dp"
        android:scrollbars="vertical"
        android:gravity="top|start"
        android:inputType="textMultiLine"/>

    <!-- Botón para guardar los requerimientos -->
    <Button
        android:id="@+id/btnSaveRequirements"
        android:layout_width="215dp"
        android:layout_height="72dp"
        android:text="Guardar Requerimientos"
        style="@style/FigmaButtonStyle"/>

    <!-- Botón para editar los requerimientos -->
    <Button
        android:id="@+id/btnEditRequirements"
        android:layout_width="215dp"
        android:layout_height="72dp"
        android:text="Editar Requerimientos"
        style="@style/FigmaButtonStyle"
        android:layout_marginTop="16dp"/>

</LinearLayout>
