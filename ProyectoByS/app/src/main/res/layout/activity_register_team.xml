<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Spinner para seleccionar la solicitud -->
    <Spinner
        android:id="@+id/spinnerRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Seleccione la solicitud" />

    <!-- Spinner para seleccionar el rol del técnico -->
    <Spinner
        android:id="@+id/spinnerTechnicianRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Seleccione el rol" />

    <!-- EditText para ingresar el nombre del técnico -->
    <EditText
        android:id="@+id/etTechnicianName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del técnico"
        android:inputType="text" />

    <!-- EditText para ingresar el teléfono del técnico -->
    <EditText
        android:id="@+id/etTechnicianPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Teléfono del técnico"
        android:inputType="phone" />

    <!-- Botón para guardar el equipo -->
    <Button
        android:id="@+id/btnSaveTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar equipo" />

</LinearLayout>
