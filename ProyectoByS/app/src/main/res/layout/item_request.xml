<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvServiceType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tipo de servicio"
            style="@style/TextAppearance.Body"
            android:paddingEnd="8dp"/>

        <TextView
            android:id="@+id/tvServiceDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fecha"
            style="@style/TextAppearance.Body"
            android:paddingEnd="8dp"/>

        <TextView
            android:id="@+id/tvServiceTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hora"
            style="@style/TextAppearance.Body"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvClientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Cliente"
        style="@style/TextAppearance.Body"
        android:paddingTop="4dp"/>

    <TextView
        android:id="@+id/tvClientAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección del Cliente"
        style="@style/TextAppearance.Body"/>

    <TextView
        android:id="@+id/tvServiceAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección del servicio"
        style="@style/TextAppearance.Body"
        android:paddingTop="4dp" />

    <EditText
        android:id="@+id/etServiceAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dirección de la solicitud"
        style="@style/TextAppearance.Body"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/btnDeleteRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:background="@drawable/button_border_red"
        android:textColor="#000000"
        android:layout_marginTop="8dp"/>

</LinearLayout>
