<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Formulario existente -->
        <EditText
            android:id="@+id/etName"
            android:hint="Nombre"
            style="@style/FigmaInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etCedula"
            android:hint="Cédula"
            style="@style/FigmaInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etPhone"
            android:hint="Teléfono (10 dígitos)"
            style="@style/FigmaInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etAddress"
            android:hint="Dirección"
            style="@style/FigmaInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:text="Registrar Cliente"
            style="@style/Widget.ProyectoByS.OutlinedButton"
            android:layout_marginTop="16dp"
            android:layout_width="215dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Nuevo: Listado de clientes -->
        <TextView
            android:layout_marginTop="24dp"
            android:text="Clientes registrados"
            style="@style/TextAppearance.Figma.Header"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnViewEditClients"
            android:layout_width="215dp"
            android:layout_height="72dp"
            android:text="Visualizar/Editar Clientes"
            style="@style/FigmaButtonStyle"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:onClick="goToViewEditClients"/>

        <Button
            android:id="@+id/btnRegisterSecondVisit"
            android:layout_width="215dp"
            android:layout_height="72dp"
            android:text="Registrar Segunda Visita"
            style="@style/FigmaButtonStyle"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"/>

        <ListView
            android:id="@+id/lvClients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
