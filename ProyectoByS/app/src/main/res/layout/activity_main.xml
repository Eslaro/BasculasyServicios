<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Formulario existente -->
        <EditText
            android:id="@+id/etName"
            android:hint="Nombre"
            style="@style/TextAppearance.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etCedula"
            android:hint="Cédula"
            style="@style/TextAppearance.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etPhone"
            android:hint="Teléfono (10 dígitos)"
            style="@style/TextAppearance.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etAddress"
            android:hint="Dirección"
            style="@style/TextAppearance.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnRegister"
            android:text="Registrar Cliente"
            style="@style/ButtonStyle"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Nuevo: Listado de clientes -->
        <TextView
            android:layout_marginTop="24dp"
            android:text="Clientes registrados"
            style="@style/TextAppearance.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnViewEditClients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visualizar/Editar Clientes"
            style="@style/ButtonStyle"
            android:layout_marginTop="16dp"
            android:onClick="goToViewEditClients"/>


        <ListView
            android:id="@+id/lvClients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
